<h1>Пользователи</h1>
 

<table class="table table-success table-striped">
  <tr>
    <th class="col">Имя</th>
    <th class="col">Email</th>
    <th class="col">Постов</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
        <td><%=link_to "#{user.name}", user_path(user)%></td>
        <td><%= user.email %></td>
        <td><%=user.posts.length %></td>
    </tr>
  <% end %>
</table>