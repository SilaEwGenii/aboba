<article class = "post">
  <section class = "post-head">
    <h2> <%=link_to post.title, post_path(post) %></h2>
    <h6> <%=link_to post.user.name , user_path(post) %></h6>
    <div>Коментариев:<%= post.comments.length %></div>>
    <small>
      <time> <%= post.created_at.to_date.strftime("%d, %B, %Y") %></time> |
      <%if current_user.id == post.user.id%>
        <%= link_to 'Изменить', edit_post_path(post) %> |
        <%= link_to 'Удалить', post_path(post), data: {turbo_method: :delete, turbo_confirm: 'Ты точно этого хочешь?' } %>
      <% end %>
    </small>
  </section>

  <section class = "post-summary">
    <%= post.text %>
  </section>

</article>











