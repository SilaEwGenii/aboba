<%= form_with model: @post, local: true do |form| %>
    <p>
        <%= form.label :user_id %><br>
        <%= form.select :user_id, User.all.map { |us| [us.name, us.id]} %>
    </p>


    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>
 
    <p>
        <%= form.label :text %><br>
        <%= form.text_area :text %>
    </p>
 
    <p>
        <%= form.submit %>
    </p>
 
<% end %>